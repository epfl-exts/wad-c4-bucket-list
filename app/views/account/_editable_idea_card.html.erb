<div class="card">
  <div class="card__thumb">
    <%= link_to(idea_path(idea)) do %>
      <%= render partial: 'idea_photo', locals: { photo_url: idea.photo_url, title: idea.title } %>
      <div class="card__intro">
        <h4 class="card__title"><%= idea.title %></h4>
        <span>75 have done this</span>
      </div>
    <% end %>
  </div>
  <div class="card__footer">
    <%= link_to(idea_path(idea), class: "btn delta", method: :delete, remote: true) do %>
      <svg class="icon-delete" role="presentation">
        <use href="/assets/icons/icons-defs.svg#delete"></use>
      </svg>
      Delete
    <% end %>
    <a class="btn delta" href="<%= edit_idea_path(idea) %>">
      <svg class="icon-edit" role="presentation">
        <use xlink:href="/assets/icons/icons-defs.svg#edit"></use>
      </svg>
      Edit
    </a>
  </div>
</div>
